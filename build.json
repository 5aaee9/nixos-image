{
    "builders": [{
        "accelerator": "{{ user `accelerator` }}",
        "boot_command": [
            "<enter><wait60>",
            "sudo su<enter>cd ~<enter>",
            "curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh -o install.sh<enter><wait2s>",
            "bash install.sh<enter>"
        ],
        "boot_wait": "3s",
        "disk_compression": true,
        "disk_size": "{{ user `disk_size` }}",
        "display": "{{ user `display` }}",
        "format": "qcow2",
        "headless": "{{ user `headless` }}",
        "http_directory": "http",
        "iso_checksum": "none",
        "iso_urls": [
            "https://channels.nixos.org/nixos-20.09/latest-nixos-minimal-x86_64-linux.iso"
        ],
        "memory": 2048,
        "name": "nixos",
        "shutdown_command": "shutdown -P now",
        "ssh_file_transfer_method": "scp",
        "ssh_password": "packer",
        "ssh_timeout": "90m",
        "ssh_handshake_attempts": "1000",
        "ssh_username": "root",
        "type": "qemu"
    }],
    "variables": {
        "accelerator": "hax",
        "disk_size": "8192M",
        "display": "gtk",
        "headless": "false"
    }
}